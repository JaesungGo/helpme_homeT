<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBDBD"
    tools:context=".RegisterActivity02">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#BDBDBD"
        android:padding="16dp"
        tools:context=".RegisterActivity02">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Profile Image"
            android:src="@drawable/default_profile_image"
            tools:layout_editor_absoluteY="76dp"/>

        <Button
            android:id="@+id/btn_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:text="프로필 사진 불러오기"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:backgroundTint="#03A2AD" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="닉네임"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="사용할 이메일"
            android:inputType="textEmailAddress"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_checkpass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:ems="10"
            android:hint="사용할 비밀번호 확인"
            android:inputType="textPassword"
            app:passwordToggleEnabled="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="사용할 비밀번호"
            android:inputType="textPassword"
            app:passwordToggleEnabled="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_pass"
            android:layout_marginTop="30dp"
            android:text="성별"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#059AA4"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_gender"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_edit_text"
            android:layout_marginTop="30dp"
            android:text="생년월일"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#059AA4"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"/>

        <DatePicker
            android:id="@+id/datepicker"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_picker"
            android:layout_marginTop="30dp"
            android:text="신체정보"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#059AA4"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"/>

        <!-- 키와 몸무게 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/heightEditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="키를 입력하세요"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/weightEditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="몸무게를 입력하세요"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textSize="16sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="가입완료"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:backgroundTint="#03A2AD"/>
    </LinearLayout>
</ScrollView>